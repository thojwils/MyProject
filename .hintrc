{
  "extends": [
    "development"
  ],
  "hints": {
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "backdrop-filter",
          "min-width: fit-content",
          "min-height: auto",
          "aspect-ratio",
          "scroll-behavior",
          "offset-path",
          "offset-path: path(\"M0 300 0 -600\")",
          "offset-path: path(\"M100 0  400 -700\")",
          "offset-distance"
        ]
      }
    ],
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "img[loading]",
          "meta[name=theme-color]"
        ]
      }
    ],
    "meta-charset-utf-8": "off",
    "no-inline-styles": "off",
    "axe/forms": [
      "default",
      {
        "label": "off"
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not ios_saf <= 15.6",
    "not safari <= 15.6"
  ]
}